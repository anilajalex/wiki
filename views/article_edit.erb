<form method="POST" action="/articles/<%= @art.first['art_id'] %>" class="article_edit">
	<h1>Edit Article: <%= @art.first['headline'] %></h1>
	<input type="hidden" name="_method" value="PATCH">

	<label>Headline:</label>
	<input type="text" name="headline" id="headline" placeholder="Headline" value="<%= @art.first['headline'] %>"></input><br><br>
	
	<label>Summary:</label> 
	<input type="text" name="summary" placeholder="Summary: cannot exceed 200 characters" value="<%= @art.first['summary'] %>"></input><br><br>
	
	<label>Body:</label> 
	<input type="text" id="body2" name="body" placeholder="Body" value="<%= @art.first['body'] %>"></input><br><br>

	<input type="submit" value="submit"></input>

</form>

