<div class="authors_container">

<h1>Authors</h1>

<ul class="authors">
	<% @authors.each do |author| %>
		<li><a href="/authors/<%= author['id'] %>"><%= author['fname'] %> <%= author['lname'] %></a>
			&mdash; <a href="mailto:<%=author['email']%>?Subject=Hello" target="_top"><%= author['email'] %></li></a>
	<% end %>
</ul>

</div>

<form method="Post" action="/authors" class="new_author"> 
	<p>New Author</p>
	<label>First Name:</label>
	<input type="text" name="fname" placeholder="First name"></input>
	<label>Last Name:</label>
	<input type="text" name="lname" placeholder="Last name"></input>
	<label>Full Name:</label>
	<input type="text" name="full_name" placeholder="Full name"></input>
	<label>Email Address:</label>
	<input type="text" name="email" placeholder="Email"></input>
	<label>Password:</label>
	<input type="password" name="password" placeholder="Password"></input>
	<input type="submit" value="submit"></input>
</form>